class Solution:
    def climbStairs(self, n: int) -> int:
        if n == 1:
            return 1
        if n == 2:
            return 2
        
        # Initialize DP array
        dp = [0] * (n + 1)
        dp[1] = 1  # Only one way to reach step 1
        dp[2] = 2  # Two ways to reach step 2
        
        # Fill DP array
        for i in range(3, n + 1):
            dp[i] = dp[i - 1] + dp[i - 2]
        
        return dp[n]    
